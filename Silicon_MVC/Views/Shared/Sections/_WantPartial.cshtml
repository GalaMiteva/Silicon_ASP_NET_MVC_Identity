
@model SubscriberViewModel

@{
    ViewData["Title"] = "Subscribe";
}

<div class="want">
    <div class="container">
       
        <div class="title">
            <h1>Don't Want to Miss Anything?</h1>
            <img src="/images/Group.svg" alt="symbol of arrow">
        </div>

        <div class="content">
            <form method="post" asp-controller="Subscribers" asp-fragment="dontWant" asp-action="Index" novalidate>
               
                <div class="content-signin">
                    <div class="column">
                        <h6>Sign up for <br> Newsletters</h6>
                    </div>
                        <div class="column">
                            <div class="input-group">
                                <input type = "checkbox" asp-for="Circle1" />
                                <label asp-for="Circle1">Daily Newsletter</label>
                            </div>
                                <span asp-validation-for="Circle1"> </span>

                            <div class="input-group">
                                <input type="checkbox" asp-for="Circle2" />
                                <label asp-for="Circle2">Event Updates</label>
                            </div>
                                <span asp-validation-for="Circle2"> </span>
                        </div>
                        
                        <div class="column">
                            <div class="input-group">
                                <input type="checkbox" asp-for="Circle3" />
                                <label asp-for="Circle3">Advertising Updates</label>
                            </div>
                                <span asp-validation-for="Circle3"> </span>
                            <div class="input-group">
                                <input type="checkbox" asp-for="Circle4" />
                                <label asp-for="Circle4">Startups Weekly</label>
                            </div>
                                <span asp-validation-for="Circle4"> </span>
                        </div>

                        <div class="column">
                            <div class="input-group">
                                <input type="checkbox" asp-for="Circle6" />
                                <label asp-for="Circle6">Week in Review</label>
                            </div class="input-group">
                                <span asp-validation-for="Circle6"> </span>
                            <div class="input-group">
                                <input type="checkbox" asp-for="Circle6" />
                                <label asp-for="Circle6">Podcasts</label>
                            </div>
                                <span asp-validation-for="Circle6"> </span>


                        </div>
                </div>

                <div class="content-email">
                     <div class="email">
                        <span id="envelope" class="envelope"><i class="fa fa-envelope"></i></span>
                        <div id="form-email" class="input-group">
                            <span asp-validation-for="Email"> </span>
                            <input asp-for="Email"/>
                        </div>
                        <button id="form-submit" type="submit" class="btn-theme">Subscribe@* @Model.Title *@ </button>
                    </div>
                    
                    <div class="terms">
                        <p> <a href="#">*</a> Yes, I agree to the <a href="#">terms</a> and <a href="#">privacy policy</a>.</p>
                        <p><a asp-action="Index" asp-fragment="dontWant"  asp-controller="Unsubscribe">Unsubscribe</a></p>
                    </div>

                </div>
            </form>
        </div>

        @if (TempData["Status"]?.ToString() == "Success")
        {
            <span class="alert alert-success">
                Thank you for subscribing!
            </span>
        }
        else if (TempData["Status"]?.ToString() == "AlreadyExist")
        {
            <span class="alert alert-warning">
                You have already subscribe!
            </span>
        }

        else if (TempData["Status"]?.ToString() == "Invalid")
        {
            <span class="alert alert-danger">
                You must enter a vaild email address!
            </span>
        }

        else if (TempData["Status"]?.ToString() == "ConnectionFailed")
        {
            <span class="alert alert-danger">
                Unable to contact the server. Please try again later.
            </span>
        }

            else if (TempData["Status"]?.ToString() == "Unauthorized")
        {
            <span class="alert alert-danger">
                An error occurred. Please contact web admin.
            </span>
        }

    </div>
</div>
<script defer src="~/js/validation.js"></script> 